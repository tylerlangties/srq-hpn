{
  "name": "srq-hpn",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:cms": "concurrently -n web,cms \"pnpm --filter web dev\" \"npx decap-server\"",
    "lint:web": "pnpm --filter web lint",
    "dev:api": "bash -lc 'cd apps/api && source .venv/bin/activate && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000'",
    "lint:api": "cd apps/api && .venv/bin/python -m ruff check .",
    "format:api": "cd apps/api && .venv/bin/python -m ruff format .",
    "db:up": "docker compose -f compose.db.yml --env-file .env.local up -d",
    "db:down": "docker compose -f compose.db.yml --env-file .env.local down",
    "db:logs": "docker logs -f srq-hpn-db",
    "docker:dev": "docker compose -f compose.dev.yml --env-file .env.local up",
    "docker:dev:build": "docker compose -f compose.dev.yml --env-file .env.local up --build",
    "docker:dev:down": "docker compose -f compose.dev.yml --env-file .env.local down",
    "docker:prod": "docker compose --env-file .env.local up -d",
    "docker:prod:build": "docker compose --env-file .env.local up -d --build",
    "docker:prod:down": "docker compose --env-file .env.local down",
    "docker:logs": "docker compose -f compose.dev.yml logs -f",
    "docker:logs:web": "docker logs -f srq-hpn-web-dev",
    "docker:logs:api": "docker logs -f srq-hpn-api-dev",
    "docker:migrate": "docker exec srq-hpn-api-dev alembic upgrade head",
    "docker:migrate:prod": "docker exec srq-hpn-api alembic upgrade head"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.27.0",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
