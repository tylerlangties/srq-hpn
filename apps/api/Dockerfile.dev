# Development Dockerfile for FastAPI backend
# Optimized for hot reload with Docker volumes

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies (needed for some Python packages)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security (avoids Celery warning about running as root)
RUN groupadd --gid 1000 appgroup && \
    useradd --uid 1000 --gid appgroup --shell /bin/bash --create-home appuser

# Create virtual environment
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install Python dependencies
COPY apps/api/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Set ownership of venv to appuser
RUN chown -R appuser:appgroup /opt/venv

# Application code will be mounted as volume
WORKDIR /app/apps/api

# Switch to non-root user
USER appuser

EXPOSE 8000

# Run with uvicorn in reload mode for hot reloading
CMD ["uvicorn", "app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]
